<div class="navbar" dir="ltr">
    <div class="navbar__leftbox">
        <a href="/" class="navbar__leftbox--logo">
          <img src="<%= subpath? '../':'' %>img/Logo.png">
        </a>
        <% if(navSearch) { %>
            <div class="navbar__leftbox--search" id="show" dir="rtl">
                <i class="bx bx-search-alt"></i>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <input dir="rtl" name="liveSearchInput" type="search" placeholder="جستجوی تیم ، بازیکن ، تورنومنت ..." autocomplete="off"/>
                <div class="uli1">
                    <div class="uli">
                        <ul id="search-result-box">
                        </ul>
                    </div>
                </div>
                <div class="custom-select">
                    <select name="searchType">
                        <option value="team">تیم</option>
                        <option value="team">تیم</option>
                        <option value="tournament">تورنومنت</option>
                        <option value="player">پلیر</option>
                    </select>
                </div>
            </div>
        <% } %>
    </div>
    <div class="navbar__rightbox">
        <% if(navSearch) { %>
            <div class="navbar__rightbox--link">
                <div id="hide" class="navbar__leftbox--search" dir="rtl">
                    <i id="hideI" class="bx bx-search-alt"></i>
                    <input id="hideInp" class="liveSearchInput" dir="rtl" type="search"
                        placeholder="جستجوی تیم ، بازیکن ، تورنومنت .." />
                </div>
            </div>
        <% } %>
        <div class="navbar__rightbox--link">
            <div class="nav-text">
                <a href="/rahimi-ai">هوش مصنوعی (رحیمی)</a>
            </div>
            <div class="navbar__rightbox icon">
                <a href="/rahimi-ai">
                    <i id="first-icon" class="bx bxs-user-account"></i>
                </a>
            </div>
        </div>
        <div class="navbar__rightbox--link">
            <div class="nav-text">
              <a href="/players">پلیر ها</a>
            </div>
            <div class="navbar__rightbox icon">
              <a href="/players">
                <i class='bx bxs-group'></i>
              </a>
            </div>
          </div>
        <div class="navbar__rightbox--link">
            <div class="nav-text">
                <a href="/teams">تیم ها</a>
            </div>
            <div class="navbar__rightbox icon">
                <a href="/teams">
                    <i class='bx bxs-flag-alt'></i></i>
                </a>
            </div>
        </div>
        <div class="navbar__rightbox--link">
            <div class="nav-text">
                <a href="/tournaments">تورنومنت ها</a>
            </div>
            <div class="navbar__rightbox icon">
                <a href="/tournaments">
                    <i class="bx bxs-award"></i>
                </a>
            </div>
        </div>
        <div class="navbar__rightbox--link">
            <% if(!isLoggedIn){ %>
                    <div class="nav-text">
                        <a href="/auth">ورود | ثبت نام</a>
                    </div>
                    <div class="navbar__rightbox icon">
                        <a href="/auth">
                            <i class="bx bxs-log-in-circle"></i>
                        </a>
                    </div>
            <% } else { %>
                <div class="navbar__rightbox--link">
                    <a id="login-acc"><%= userName %></a>
                    <a><i class="bx bxs-log-in-circle"></i></a>
                    <div class="open__bar" dir="rtl">
                        <div class="open__bar--block">
                            <i class="bx bxs-dashboard"></i>
                            <a href="/dashboard" class="hover__overlay">داشبورد</a>
                        </div>
                        <div class="open__bar--block">
                            <i class="bx bxs-bell"></i>
                            <a href="/dashboard/notif" class="hover__overlay">اعلان ها</a>
                            <span><%= notifCount %></span>
                        </div>
                        <div name="logoutBtn" class="open__bar--block">
                            <i class="bx bxs-exit"></i>
                            <a class="hover__overlay">خروج</a>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
</div>